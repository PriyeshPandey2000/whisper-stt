{
	"build": {
		"beforeBuildCommand": "bun run build",
		"beforeDevCommand": "bun run dev:web",
		"frontendDist": "../build",
		"devUrl": "http://localhost:1420"
	},
	"bundle": {
		"active": true,
		"category": "Productivity",
		"targets": "all",
		"resources": ["recording-overlay.html"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"longDescription": "Seamlessly integrate speech-to-text transcriptions anywhere on your desktop. Powered by OpenAI's Whisper API.",
		"shortDescription": "Press shortcut → speak → get text. Free and open source ❤️",
		"createUpdaterArtifacts": true,
		"macOS": {
			"entitlements": "entitlements.plist"
		},
		"linux": {
			"appimage": {
				"bundleMediaFramework": true
			}
		},
		"windows": {
			"webviewInstallMode": {
				"type": "downloadBootstrapper"
			}
		}
	},
	"productName": "NoteFlux",
	"version": "0.0.5",
	"identifier": "com.priyeshpandey.noteflux",
	"plugins": {
		"deep-link": {
			"desktop": {
				"schemes": ["noteflux"]
			}
		},
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRCRjNDMkJGMzdGRUM4RTYKUldUbXlQNDN2OEx6Uzl6T1h0MTdJWkRQTG91eTZzalJwVHhaY290eG9pcmF3cGRDSEFubWU2clIK",
			"endpoints": [
				"https://github.com/PriyeshPandey2000/whisper-stt/releases/latest/download/latest.json"
			]
		}
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"resizable": true,
				"title": "NoteFlux",
				"width": 800,
				"height": 600,
				"minHeight": 84,
				"minWidth": 72,
				"transparent": true
			}
		],
		"security": {
			"csp": null
		}
	}
}
